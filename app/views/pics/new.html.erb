<div class="span6 smurfy offset4 text-center">

<h1 class="custom-h1">How did Kenny die?</h1>

	<%= simple_form_for @pic do |f| %> 
		<%= f.input :title, label: 'What is this pic about?', placeholder: 'The wrath of God.' %>
		<%= f.input :subtitle, label: 'More details!', placeholder: 'Kenny is struck by lightning when God is angered by South Park residents' %>
		<%= f.input :message, label: 'What were Kenny\'s last words?', placeholder: 'Why me!?!?!?' %>

		<%= f.submit "Submit", :class => 'btn btn-warning btn-large' %>
	<% end %> 

</div>