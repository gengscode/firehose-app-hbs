<% @pics.each_slice(3) do |slice| %> 
	<div class="row">
	<% slice.each do |pic| %>

<!--# the slice is how many rows we want to grab at a time.  Then for each slice we want it to grab each pic -->

		<div class="smurfy span4">

			<h1 class="custom-h1">
			Title: <%= pic.title %>
			<h1/>
			<br/>
			<h2 class="custom-h2">
			Subtitle: <%= pic.subtitle %>
			<br/><br/>
			Message: <%= pic.message %>
			<br/><br/>
			Image: <%= image_tag pic.image %>
			</h2>
		</div>
		<% end %>
	</div>
	</br>

<% end %>